{
    "name": "langsys/php-sdk",
    "description": "PHP SDK for Langsys Translation API",
    "type": "library",
    "license": "MIT",
    "keywords": ["langsys", "translation", "i18n", "localization", "api"],
    "homepage": "https://langsys.dev",
    "require": {
        "php": ">=5.6",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "suggest": {
        "ext-redis": "For Redis cache support"
    },
    "autoload": {
        "psr-4": {
            "Langsys\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Langsys\\SDK\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^9.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
